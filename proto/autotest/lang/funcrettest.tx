main()->Int {
    assert abs1(1) == 1;
    assert abs1(-1) == 1;
    assert abs2(1) == 1;
    assert abs2(-1) == 1;

    assert sign1(0) == 0;
    assert sign1(100) == 1;
    assert sign1(-100) == -1;
    assert sign2(0) == 0;
    assert sign2(100) == 1;
    assert sign2(-100) == -1;
    return 0;
}

