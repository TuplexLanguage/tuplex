abs1(x : Int)->Int {
    if x < 0:
        return -x;
    else
        return x;
}

abs2(x : Int)->Int {
    if x < 0:
        return -x;
    return x;
}

sign1(x : Int)->Int {
    if x > 0:
        return 1;
    else if x < 0:
        return -1;
    else
        return 0;
}

sign2(x : Int)->Int {
    if x > 0:
        return 1;
    else if x < 0:
        return -1;
    return 0;
}

sum(x : Int)->Int {
    sum := ~ 0I;
    xi := ~ x;
    while (TRUE) {
        if xi <= 0:
            break;
        sum = sum + xi;
        xi = xi - 1;
    }
    return sum;
}


